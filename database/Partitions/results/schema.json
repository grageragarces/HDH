{
  "version": "1.0",
  "description": "Schema for HDH partitioning results",
  "created": "2025-12-15",
  "columns": {
    "workload_file": {
      "type": "string",
      "required": true,
      "description": "Filename of the workload (without path)"
    },
    "model": {
      "type": "string",
      "required": true,
      "enum": [
        "Circuits",
        "MBQC",
        "QW",
        "QCA"
      ],
      "description": "Computational model"
    },
    "origin": {
      "type": "string",
      "required": true,
      "description": "Source benchmark or dataset name"
    },
    "n_qubits": {
      "type": "integer",
      "required": true,
      "minimum": 1,
      "description": "Total number of qubits in the workload"
    },
    "k_partitions": {
      "type": "integer",
      "required": true,
      "minimum": 2,
      "description": "Number of partitions created"
    },
    "capacity": {
      "type": "integer",
      "required": true,
      "minimum": 1,
      "description": "Maximum qubits allowed per partition"
    },
    "method_name": {
      "type": "string",
      "required": true,
      "description": "Unique identifier for the partitioning method"
    },
    "method_version": {
      "type": "string",
      "required": true,
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the method"
    },
    "config_hash": {
      "type": "string",
      "required": true,
      "description": "Hash of the configuration parameters used"
    },
    "bins": {
      "type": "json_array",
      "required": true,
      "description": "List of qubit sets, one per partition"
    },
    "cost": {
      "type": "integer",
      "required": true,
      "minimum": 0,
      "description": "Number of hyperedges cut (quantum communication cost)"
    },
    "respects_capacity": {
      "type": "boolean",
      "required": true,
      "description": "Whether all partitions satisfy capacity constraint"
    },
    "method_metadata": {
      "type": "json_object",
      "required": false,
      "description": "Method-specific additional data"
    },
    "time_seconds": {
      "type": "float",
      "required": false,
      "minimum": 0,
      "description": "Runtime in seconds"
    },
    "memory_mb": {
      "type": "float",
      "required": false,
      "minimum": 0,
      "description": "Peak memory usage in megabytes"
    },
    "date_run": {
      "type": "iso_date",
      "required": true,
      "description": "Date when the test was executed"
    },
    "library_version": {
      "type": "string",
      "required": true,
      "description": "Version of the HDH library"
    },
    "contributor": {
      "type": "string",
      "required": true,
      "description": "Username or identifier of contributor"
    },
    "notes": {
      "type": "string",
      "required": false,
      "description": "Additional notes or comments"
    }
  }
}